---
import Layout from '@layouts/Layout.astro';
import Header from '@components/basic/Header.astro';


import { getEntry } from 'astro:content';
const about = await getEntry('about', 'about');
const { Content } = await about.render();
---

<Layout title="ABOUT XYNY">
    <main class="dark:bg-black dark:text-white w-full  min-h-screen">
        <Header/>
        <section class="prose max-w-4xl mx-auto text-[#191919] dark:text-[#DDD] pb-12 px-2">
          <Content/>
        </section>
    </main>
</Layout>

<style is:global>
  .prose ul {
    margin: 0em 0;
    list-style-type: square;
  }
</style>