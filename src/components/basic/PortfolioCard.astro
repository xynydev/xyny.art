---
import type { CollectionEntry } from "astro:content";
    interface Props {
    p: CollectionEntry<'portfolio'>;
}
const { p } = Astro.props
import { Image } from "astro:assets"
---

<a href={`/portfolio/${p.slug}`} class="flex flex-col outline p-4 relative group gap-4 z-10">
    <h2 class="text-2xl group-focus:underline">{p.data.title}</h2>
    <p class="text-[#191919] dark:text-[#DDD]">{p.data.desc}</p>
    <hr class="border-none mb-2">
    <Image src={p.data.gallery[0].images[0].img} alt={p.data.gallery[0].images[0].alt} class="max-w-full max-h-full w-fit h-fit mt-auto shadow-lg"></Image>
    <div class="absolute inset-0 bg-white/80 -z-1  dark:bg-black"></div>
    <div class="absolute w-full h-full outline outline-2 -translate-4 group-hover:-translate-2.5 transition pointer-events-none bg-gray-400/50 dark:bg-gray-600/50 -z-2"></div>
    <div class="absolute w-full h-full outline outline-1 -translate-4 group-hover:-translate-1 transition pointer-events-none dark:bg-gray-600/75 -z-3"></div>
</a>
